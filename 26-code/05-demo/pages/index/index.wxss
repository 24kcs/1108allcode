/* pages/index/index.wxss */
page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #02a774;
}

.avatar {
  width: 200rpx;
  height:200rpx;
  border-radius: 50%;
  margin-top: 100rpx;
}

.userName {
  font-size: 32rpx;
  font-weight: 700;
  margin: 200rpx 0 100rpx;
}

.button-container {
  width: 200rpx;
  height:80rpx;
  border: 1rpx solid #666;
  line-height: 80rpx;
  text-align: center;
  border-radius: 20rpx;
}
.button-container text{
  font-size: 26rpx;
}
