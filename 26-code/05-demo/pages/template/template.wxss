.templateContainer {
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid red;
  border-bottom: 1rpx solid red;
  margin-top:10rpx;
}

.avatar {
  margin:10rpx;
}

.avatar image {
  width:60rpx;
  height:60rpx;
  border-radius: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.avatar text {
  vertical-align: middle;
}

.company {
  font-size:36rpx;
  font-weight: 700;
}

.company-img {
  width:100%;
  height:340rpx;
}

.company-text {
  color:#666;
  font-size: 36rpx;
  line-height: 56rpx;
  text-indent: 36rpx;
}
.company-img-text{
  margin:10rpx;
}
.company-img-text image {
  width:32rpx;
  height:32rpx;
}

.company-img-text text {
  color:#666;
  margin:10rpx 20rpx;
}
